<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">
   <LinearLayout
       android:layout_margin="10dp"
       android:background="@drawable/bg_online_customer_service_white"
       android:orientation="vertical"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:paddingRight="6dp"
           android:paddingTop="4dp"
           android:paddingBottom="4dp">
           <LinearLayout
               android:orientation="vertical"
               style="@style/more_activity_ll">
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:text="手势密码："
                       android:textSize="16dp"
                       style="@style/more_activity_tv_con" />
                   <TextView
                       android:layout_marginLeft="0dp"
                       android:id="@+id/tv_lock_status"
                       android:textSize="16dp"
                       android:text="关闭"
                       style="@style/more_activity_tv_con" />
               </LinearLayout>
               <TextView
                   android:textColor="@color/gray"
                   android:textSize="12dp"
                   android:text="开启手势密码，需要手势密码验证"
                   style="@style/more_activity_tv_con" />
           </LinearLayout>
           <Switch
               android:id="@+id/switch_lock_status"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="10dp"/>
       </RelativeLayout>
       <TextView
           android:visibility="gone"
           android:id="@+id/tv_line"
           style="@style/more_activity_tv_line" />
       <RelativeLayout
           android:visibility="gone"
           android:id="@+id/rl_change_lock"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingLeft="10dp"
           android:paddingRight="10dp"
           android:paddingTop="16dp"
           android:paddingBottom="16dp">
           <TextView
               android:textSize="16dp"
               android:text="修改手势密码"
               style="@style/more_activity_tv_con" />
           <ImageView
               style="@style/more_activity_iv_right" />
       </RelativeLayout>
   </LinearLayout>
</LinearLayout>
