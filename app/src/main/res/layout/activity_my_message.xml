<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_bg">
    <LinearLayout
        android:layout_margin="10dp"
        android:background="@drawable/bg_online_customer_service_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_web_site_msg"
            style="@style/more_activity_rl">
            <LinearLayout
                style="@style/more_activity_ll">
                <ImageView
                    style="@style/more_activity_icon"
                    android:src="@drawable/letter"/>
                <TextView
                    android:text="站内信"
                    android:id="@+id/tv_web_site_msg"
                    style="@style/more_activity_tv_con"/>
            </LinearLayout>
            <ImageView
                style="@style/more_activity_iv_right" />
        </RelativeLayout>
        <TextView
            style="@style/more_activity_tv_line" />
        <RelativeLayout
            android:id="@+id/rl_media_report"
            style="@style/more_activity_rl">
            <LinearLayout
                style="@style/more_activity_ll">
                <ImageView
                    android:src="@drawable/media_report"
                    style="@style/more_activity_icon" />
                <TextView
                    android:id="@+id/tv_media_report"
                    android:text="媒体报道"
                    style="@style/more_activity_tv_con" />
            </LinearLayout>
            <ImageView
                style="@style/more_activity_iv_right" />
        </RelativeLayout>
        <TextView
            style="@style/more_activity_tv_line" />
        <RelativeLayout
            android:id="@+id/rl_huorong_state"
            style="@style/more_activity_rl">
            <LinearLayout
                style="@style/more_activity_ll">
                <ImageView
                    style="@style/more_activity_icon"
                    android:src="@drawable/dongtai"/>
                <TextView
                    android:text="货融动态"
                    android:id="@+id/tv_huorong_state"
                    style="@style/more_activity_tv_con" />
            </LinearLayout>
            <ImageView
                style="@style/more_activity_iv_right" />
        </RelativeLayout>
        <TextView
            style="@style/more_activity_tv_line" />
        <RelativeLayout
            android:id="@+id/rl_huorong_column"
            style="@style/more_activity_rl">
            <LinearLayout
                style="@style/more_activity_ll">
                <ImageView
                    android:src="@drawable/zhuanlan"
                    style="@style/more_activity_icon" />
                <TextView
                    android:id="@+id/tv_huorong_column"
                    android:text="货融专栏"
                    style="@style/more_activity_tv_con" />
            </LinearLayout>
            <ImageView
                style="@style/more_activity_iv_right" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
