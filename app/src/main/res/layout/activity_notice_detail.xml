<?xml version="1.0" encoding="utf-8"?>
<com.example.administrator.huorongdai.xframe.widget.loadingview.XLoadingView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/xloading_view">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/srl_notice_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.example.administrator.huorongdai.view.MyScrollView
            android:id="@+id/sl_notice_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">
                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="16dp"
                        android:textColor="@color/word_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_notice_title"/>
                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:textSize="14dp"
                            android:textColor="@color/word_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="发布时间:"/>
                        <TextView
                            android:textSize="14dp"
                            android:textColor="@color/word_gray"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_publish_time"/>
                    </LinearLayout>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:textSize="16dp"
                        android:textColor="@color/gray"
                        android:id="@+id/tv_cont"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
        </com.example.administrator.huorongdai.view.MyScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>
</com.example.administrator.huorongdai.xframe.widget.loadingview.XLoadingView>
