<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/success"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:textColor="@color/word_gray"
            android:layout_marginLeft="10dp"
            android:textSize="16dp"
            android:text="恭喜您开户成功!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="@color/word_gray"
        android:textSize="14dp"
        android:text="您可以前往我的账户进去充值，投资!"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/btn_back_home"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:text="回到首页"
            android:background="@drawable/btn_red_gray_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:gravity="center"
            android:padding="10dp"
            android:id="@+id/btn_goto_account"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:textColor="@drawable/red_and_white"
            android:textSize="16dp"
            android:text="前往账户"
            android:background="@drawable/btn_red_gray_selector"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
