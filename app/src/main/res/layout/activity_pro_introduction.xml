<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.administrator.huorongdai.view.MyScrollView
        android:layout_margin="10dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/bg_online_customer_service_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/ll_data_type"
                android:orientation="vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/word_dark"
                    android:text="抵押资料"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <com.example.administrator.huorongdai.view.banner.Banner
                    android:id="@+id/data_type_banner"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    app:image_scale_type="fit_center"
                    app:indicator_margin="4dp"
                    app:indicator_drawable_selected="@drawable/round_red"
                    app:indicator_drawable_unselected="@drawable/round_dark_gray"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pro_info"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/word_dark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="项目描述"/>
                <TextView
                    android:lineSpacingExtra="4dp"
                    android:id="@+id/tv_loan_desc"
                    android:textSize="16dp"
                    android:textColor="@color/word_gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </com.example.administrator.huorongdai.view.MyScrollView>
</LinearLayout>
