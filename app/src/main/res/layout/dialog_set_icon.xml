<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_ios">
        <TextView
            android:id="@+id/tv_icon_title"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/gray"
            android:textSize="18dp"
            android:singleLine="true"
            android:text="请选择图片来源"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/more_activity_tv_line" />
        <TextView
            android:id="@+id/tv_icon_take_photo"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textSize="18dp"
            android:text="打开照相机"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/more_activity_tv_line" />
        <TextView
            android:id="@+id/tv_icon_photo_album"
            android:padding="10dp"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textSize="18dp"
            android:text="从手机相册获取"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_dialog_ios">
        <TextView
            android:id="@+id/tv_icon_cancel"
            android:padding="10dp"
            android:textColor="@color/pickerview_timebtn_nor"
            android:textSize="18dp"
            android:gravity="center_horizontal"
            android:text="取消"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>