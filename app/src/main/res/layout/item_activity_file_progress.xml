<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/file_progress_item_ll"
    android:background="@color/gray_bg">
    <TextView
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/file_progress_item_tv_thing"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="left"
        android:text="合规事项"
        android:textSize="14dp"
        android:textColor="@color/word_gray"
        android:layout_weight="2"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="80dp"
        android:layout_marginLeft="-40dp"
        android:layout_marginRight="-40dp"
        android:layout_height="match_parent"
        android:background="@drawable/dash_view_vertical"
        android:layerType="software"/>
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/file_progress_item_tv_state_done"
            android:visibility="gone"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/bg_red_line_right_angle"
            android:gravity="center_horizontal"
            android:text="已完成"
            android:textSize="14dp"
            android:textColor="@color/big_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/file_progress_item_tv_state_no"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:gravity="left"
            android:text="dfafasdsdfadfasdfasdfasdfasdfasfaf"
            android:textSize="14dp"
            android:textColor="@color/big_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>