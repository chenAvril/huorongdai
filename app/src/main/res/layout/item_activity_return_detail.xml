<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:background="@drawable/bg_online_customer_service_white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_date"
        android:textSize="16dp"
        android:textColor="@color/word_gray"
        android:text="2018-01-01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginLeft="4dp"
        android:background="@drawable/sgin_red_selector"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:id="@+id/tv_yi"
        android:textSize="14dp"
        android:layout_toRightOf="@id/tv_date"
        android:textColor="@color/white"
        android:text="已回款"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_toLeftOf="@id/tv_iint"
        android:id="@+id/tv_capital"
        android:textSize="16dp"
        android:textColor="@color/word_gray"
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_iint"
        android:layout_alignParentRight="true"
        android:textSize="16dp"
        android:textColor="@color/word_red"
        android:text="+18.83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>