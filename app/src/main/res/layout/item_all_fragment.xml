<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_marginTop="8dp"
        android:layout_marginBottom="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/rl_bar"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_pro_name"
                    android:textSize="16dp"
                    android:padding="2dp"
                    android:textColor="@color/white"
                    android:background="@color/blue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_loan_title"
                    android:layout_marginLeft="10dp"
                    android:singleLine="true"
                    android:textSize="16dp"
                    android:textColor="@color/word_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/lilv"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_loan_arp"
                        android:textSize="30dp"
                        android:textColor="@color/word_red"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="bottom"
                        android:textSize="16dp"
                        android:textColor="@color/word_red"
                        android:text="%"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:scaleType="fitXY"
                        android:src="@drawable/qixian"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:id="@+id/tv_loan_expiry"
                        android:textSize="30dp"
                        android:textColor="@color/word_dark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:layout_marginBottom="2dp"
                        android:layout_gravity="bottom"
                        android:id="@+id/tv_expiry_unitStr"
                        android:textSize="14dp"
                        android:textColor="@color/word_dark"
                        android:text="天"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_can_be"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:textSize="16dp"
                    android:textColor="@color/word_gray"
                    android:text="可投金额  ¥  "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_can_be_cast"
                    android:textSize="16dp"
                    android:textColor="@color/word_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rl_bar"
            android:layout_margin="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal">
            <com.example.administrator.huorongdai.view.circlepercentview.CirclePercentBar
                android:id="@+id/circle_bar_red"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:arcWidth="6dp"
                app:circleRadius="40dp"
                app:centerTextSize="12dp"
                app:centerTextColor="@color/blue"
                app:arcStartColor="@color/blue"/>
            <com.example.administrator.huorongdai.view.circlepercentview.CirclePercentBar
                android:visibility="gone"
                android:id="@+id/circle_bar_gray"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:arcWidth="6dp"
                app:circleRadius="40dp"
                app:centerTextSize="12dp"
                app:centerTextColor="@color/gray"
                app:arcStartColor="@color/gray"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>