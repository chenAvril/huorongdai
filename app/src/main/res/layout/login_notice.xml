<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_dialog_ios"
    android:orientation="vertical">
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:paddingLeft="30dp"
        android:paddingTop="34dp"
        android:paddingBottom="34dp">
        <TextView
            android:id="@+id/tv_login_notice_title"
            android:textSize="16dp"
            android:textColor="@color/word_gray"
            android:text="未登录，是否前往登录？"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        style="@style/more_activity_tv_line"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/tv_login_notice_cancel"
            android:textSize="16dp"
            android:textColor="@color/word_gray"
            android:gravity="center"
            android:text="否"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <TextView
            android:background="@color/gray_bg"
            android:layout_width="1dp"
            android:layout_height="match_parent" />
        <TextView
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:id="@+id/tv_login_notice_sure"
            android:textSize="16dp"
            android:textColor="@color/word_gray"
            android:gravity="center"
            android:text="是"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>